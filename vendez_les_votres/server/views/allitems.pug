extends layout


append headblock
  unless myItems
    script(src="/javascripts/buy-item.js")

block content
  h1= title
  unless myItems
    #lastBought
  table#booklist
    each item in items
      tr.book(data-id= item.id)
        td.title(data-id= item._id)
          a(href=`/items/details/${item._id}`)= item.title
        td= `${item.price}â‚¬`
        if myItems
          td.delete
            a(href='/items/delete/'+item._id) X
        else 
          td.delete
            if item.price <= user.money
              button(class= 'buybutton', data-id= item.id) Acheter
    else
      td Aucun objet actuellement en vente
  
