extends layout


block content
  h1= title
  p Identifiant de l'annonce: #[code= item._id]
  h2.title= `${item.name} à ${item.price}€`
  .author Mis en vente par #{item.soldBy.toUpperCase()}
  +createImage(`${item.image}`)
  if item.description
    #details
      p Description :
      dl
        dd #{item.description}
