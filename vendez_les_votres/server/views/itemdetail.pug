extends layout


block content
  if item
    h2.title= `${item.title} - ${item.price}€`
    .author Mis en vente par #{item.soldBy.toUpperCase()}
    +createImage(`${item.image}`)
    if item.description
      #details
        p Description :
        dl
          dd #{item.description}
  else 
    h2.title= "Aucun objet à afficher!"
